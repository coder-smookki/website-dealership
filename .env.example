# API Configuration
API_PORT=3001
API_HOST=0.0.0.0
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/car-shop
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme123

# JWT Configuration
# Access Token - короткоживущий токен для авторизации запросов
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m

# Refresh Token - долгоживущий токен для обновления access token
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Legacy JWT Secret (для обратной совместимости, можно удалить после миграции)
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# CORS Configuration
